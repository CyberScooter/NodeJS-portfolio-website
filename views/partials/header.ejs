<body>

  <div class="bg-img">

    <nav class="navbar navbar-dark navbar-expand-sm px-3 px-md-0 fixed-top">
      <div class="container">
        <a class="navbar-brand" href="/"><i class="fas fa-code pr-1"></i> Hrithik</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <% if(currentURL === "/" ){ %>
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <% }else{ %>
            <li class="nav-item">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <% } %> 
            <% if(currentURL === "/profile" ){ %>
            <li class="nav-item active">
              <a class="nav-link" href="/profile">Portfolio <span class="sr-only">(current)</span></a>
            </li>
            <% }else{ %>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Portfolio <span class="sr-only">(current)</span></a>
            </li>
            <% } %>
            <% if(currentURL === "/work" ){ %>            
            <li class="nav-item active">
              <a class="nav-link" href="/work">My Work <span class="sr-only">(current)</span></a>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/work">My Work <span class="sr-only">(current)</span></a>
            </li>
            <% } %>
          </ul>
          <ul class="navbar-nav ml-auto pr-3">
            <% if(currentURL === "/contact" ){ %>      
            <li class="nav-item active">  
              <a class="nav-link" href="/contact">Contact</a>
            </li>
            <% }else{ %>
            <li class="nav-item">  
              <a class="nav-link" href="/contact">Contact</a>
            </li>
            <% } %>
          </ul>
          <div id="header-icons" class= "footer-icons">
            <a href="http://github.com/ritz07"><i class="fab fa-github fa-1x">  </i> </a>
            <a href="http://www.instagram.com/hrithik764/?hl=en"> <i class="fab fa-instagram fa-1x mx-4"> </i> </a>
            <a href="https://www.facebook.com/hrithik.lacximicant"> <i class="fab fa-facebook-square fa-1x"> </i> </a>
          </div>
        </div>
      </nav>

      <div class="container">
        <% if(success && success.length > 0){ %>
          <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
        <% }else if(error && error.length > 0){ %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
      </div>