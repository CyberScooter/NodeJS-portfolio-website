
<% include ./partials/header %>

      <div id="contact-text-area" class="container animated fadeInDown fast mt-5">
        <div class="text-area">
          <form action='/contact' method='POST' >
            <div class="form-group">
              <label>Email address</label>
              <input type="email" name="email" class="form-control" placeholder="name@example.com" required>
            </div>
            <div class="form-group">
              <label>Subject</label>
              <input type="text" name="subject" class="form-control" required>
            </div>
            <div class="form-group">
              <label>Enter message</label>
              <textarea class="form-control" name="content" rows="5" required></textarea>
            </div>
            <div class="g-recaptcha" data-sitekey=<%= process.env.RECAPTCHA_PUBLIC_KEY %>></div><br>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
          <p class="mt-4"><strong>Or alternatively email me at hrithik7132@gmail.com </strong></p>
        </div>
      </div>



      
<% include ./partials/footer %>
